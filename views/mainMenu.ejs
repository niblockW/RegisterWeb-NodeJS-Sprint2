<html>

<head>
	<title>Register - Main Menu</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="stylesheet" type="text/css" href="/styles/master.css">

	<script type="text/javascript" src="/libs/jquery-3.3.1.js" defer></script>
	<script type="text/javascript" src="/scripts/master.js" defer></script>
	<script type="text/javascript" src="/scripts/mainMenu.js" defer></script>
</head>

<body>

	<div class="header">
		<h1 class="primary-message">Main Menu</h1>
	</div>

	<div id="main" class="main">
		<div id="error" <% if (!locals.errorMessage || (locals.errorMessage === "")) { %> class="hidden" <% } %>>
			<h4 id="errorMessage" class="error-message">
				<% if (locals.errorMessage && (locals.errorMessage !== "")) { %>
					<%= locals.errorMessage %>
				<% } %>
			</h4>
		</div>

		<div class="mainMenuActionsWrapper">
			<br />
			<button id="startTransactionButton" type="button" class="action" title="Functionality Not Available" >Start Transaction</button>
			<br /><br />
			<button id="viewProductsButton" type="button" class="action">View Products</button>
			<div <% if (!locals.isElevatedUser) { %>class="hidden"<% } %>>
				<br /><br />
				<button id="createEmployeeButton" type="button" class="action">Create Employee</button>
				<br /><br />
				<button id="productSalesReportButton" type="button" class="action" title="Functionality Not Available" disabled>Product Sales</button>
				<br /><br />
				<button id="cashierSalesReportButton" type="button" class="action" title="Functionality Not Available" disabled>Cashier Sales</button>
			</div>
		</div>
	</div>

	<div class="hidden">
		<input type="hidden" id="isRefreshed" value="no">
		<script type="text/javascript">
			window.onunload = function() {
				const isRefreshedElement = document.getElementById("isRefreshed");

				if(isRefreshedElement.value === "no") {
					isRefreshedElement.value = "yes";
				} else {
					isRefreshedElement.value = "no";
					location.reload();
				}
			}
		</script>
	</div>

	<div class="footer">
		<img id="signOutImage" src="/images/Sign-Out.png" alt="Sign Out" class="footer" />
	</div>

</body>

</html>
